---
const cardsOportunidades = [
  {
    title1: "Oferta de empleo",
    title2: "Miles de oportunidades",
    img: "./images/ofertaEmpleo.png",
    gradient: "bg-gradient-to-t from-[#8BCFAD] to-[#E6F6EE]",
    colorTitle: "text-[#0E8247]",
    marginBotton: "",
    href: "https://www.infojobs.net/",
  },
  {
    title1: "InfoJobs en TikTok",
    title2: "Consejos para encontrar trabajo",
    img: "./images/infoTikTok.png",
    gradient: "bg-gradient-to-t from-[#FFE4A2] to-[#FEF6DB]",
    colorTitle: "text-[#EFA500] ",
    marginBotton: "",
    href: "https://www.tiktok.com/@infojobs/playlist/Encontrar%20trabajo-7401023016819378977 ",
  },
] as const
---

<div
  class="grid grid-cols-1 md:grid-cols-2 w-auto h-auto gap-6 md:gap-[40px] mt-6 mb-9"
>
  {
    cardsOportunidades.map((card) => (
      <a
        class={`group flex flex-col rounded-[16px] pt-4 px-4 md:px-[60px] md:pt-[40px] aspect-[328/436] md:aspect-square w-full overflow-hidden ${card.gradient}`}
        href={card.href}
        target="_blank"
      >
        <p class="mt-4 text-2xl sm:text-4xl md:text-2xl lg:text-2xl font-semibold text-gray-900">
          {card.title1}
        </p>
        <p
          class={`mt-2 text-3xl sm:text-4xl md:text-3xl lg:text-5xl font-semibold ${card.colorTitle}`}
        >
          {card.title2}
        </p>
        <div class="flex justify-center mt-auto w-full h-auto">
          <div
            class={`flex justify-center mt-auto w-full h-auto md:mb-0 ${card.marginBotton}`}
          >
            <img
              class="md:w-[500px] md:h-[396px] w-full h-full scale-125 md:scale-100 transition md:group-hover:scale-105 md:group-hover:z-10 object-contain object-bottom"
              src={card.img}
              alt="InfoJobs"
            />
          </div>
        </div>
      </a>
    ))
  }
</div>
